<div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
            <h5 class="card-title text-center">Register</h5>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>

            <form class="form-signin">
              <div class="form-label-group">
                  <%= f.text_field :full_name , placeholder: "Full name", required:true , autofocus: true, autocomplete: "full_name", id: "inputUserame", class: "form-control"  %>
                <label for="inputUserame">Full name</label>
              </div>

              <div class="form-label-group">
                <%= f.email_field :email , placeholder: "Email", required:true,  autocomplete: "email", id: "inputEmail", class: "form-control"  %>
                <label for="inputEmail">Email address</label>
              </div>
              
              <hr>

              <div class="form-label-group">
                <%= f.password_field :password, placeholder: "Password (6 characters min)" , autocomplete: "new-password", id: "inputPassword", class:"form-control", required:true %>
                <label for="inputPassword">Password</label>
              </div>
              
              <div class="form-label-group">
                <%= f.password_field :password_confirmation , placeholder: "Confirm password", autocomplete: "new-password", id: "inputConfirmPassword", class: "form-control", required:true %>
                <label for="inputConfirmPassword">Confirm password</label>
              </div>

              <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              
              <hr class="my-4">

              <%= render "devise/shared/links" %>
              <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>